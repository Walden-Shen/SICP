(define (exponentiation? x) (and (pair? x) (eq? (car x) '**)))
(define (base e) (cadr e))
(define (exponent e) (caddr e))
(define (make-exponentiation e1 e2)
 (cond  ((=number? e2 1) 1)
  		((=number? e2 2) e1)
		(else (list '* e2 (list '** e1 (- e2 1))))))
